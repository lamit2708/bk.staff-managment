@using BK.StaffManagement.ViewModels
@model IEnumerable<StaffViewModel>
@{
    ViewData["Title"] = "Staff Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customer Management
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Customer</a></li>
        <li class="active><a href="#">List</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    @*<h3 class="box-title">User List</h3>*@

                    <button type="button" class="btnAdd btn btn-primary pull-left"
                            onclick="location.href='@Url.Action("Add", "Staffs")';">
                        <i class="fa fa-plus"></i> Add Staff
                    </button>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tbl_user" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>Staff Code</th>
                                <th>Title</th>
                                <th>Phone Number</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Salary</th>
                                <th>HireDate</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var u in Model)
                            {
                                <tr>

                                    <td>@u.UserName</td>
                                    <td>@u.StaffCode</td>
                                    <td>@u.Title</td>
                                    <td>@u.PhoneNumber</td>
                                    <td>@u.Address</td>
                                    <td>@u.Email</td>
                                    <td>@u.Salary</td>
                                    <td class="datefield">@u.HireDate</td>
                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { id=u.USER_ID})*@
                                        <button type="button" data-user-id="@u.Id" data-user-name="@u.UserName"
                                                class="btnEdit btn btn-success pull-right" style="margin-right: 5px;">
                                            <i class="fa fa-edit"></i> Edit
                                        </button>

                                    </td>
                                    <td>
                                        <button data-user-id="@u.Id"
                                                data-user-name="@u.UserName" type="button" class="btnDelete btn btn-danger pull-right">
                                            <i class="fa fa-remove"></i> Del
                                        </button>
                                    </td>

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>User Name</th>
                                <th>Staff Code</th>
                                <th>Title</th>
                                <th>Phone Number</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Salary</th>
                                <th>HireDate</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<environment names="Development">
    <!-- bootstrap datepicker -->
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/moment/moment.js"></script>
</environment>
<environment names="Staging,Production">
    <!-- bootstrap datepicker -->
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/moment/moment.js"></script>
</environment>
@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {

            $('.btnEdit').click(function (e) {
                //var userId = $(this).data('userId');
                var id = $(this).data('userId');
                //console.log($(this).data());
                location.href = '@Url.Content("~/Customers/Edit/")' + id.toUpperCase();
            });
            $('.btnDelete').click(function (e)
            {
                var userId = $(this).data('userId');
                var username = $(this).data('userName');
                if (confirm("Are your sure to delete customer " + username+" ?")) {

                    location.href = '@Url.Content("~/Customers/DeleteAsync/")' + userId;
                }




            });
          
            $('.datefield').each(function (i, el) {
                var txt = $(el).text();
                var dateStr=moment.unix(parseInt(txt)/1000).format("DD-MM-YYYY");
                //var date = new Date(parseInt(txt));
                $(el).text(dateStr);
            });
            
        });
        function timeConverter(UNIX_timestamp) {
            var a = new Date(UNIX_timestamp * 1000);
            var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            var year = a.getFullYear();
            var month = months[a.getMonth()];
            var date = a.getDate();
            var hour = a.getHours();
            var min = a.getMinutes();
            var sec = a.getSeconds();
            var time = date + ' ' + month + ' ' + year + ' ' + hour + ':' + min + ':' + sec;
            return time;
        }
    </script>

    <!-- page script -->
    <script>
        $(function () {
            //$('#example1').DataTable()
            $('#tbl_user').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>

    <!-- Menu Active -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('a.menu_user').closest('li').addClass('active');
            //$('a.menu_multilevel').closest('li').addClass('active');
            //$('a.menu_level1').closest('li').addClass('active');

        });
    </script>







}
